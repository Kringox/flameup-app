rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    function isChatParticipant(chatId) {
      let chat = get(/databases/$(database)/documents/chats/$(chatId));
      return isAuthenticated() && request.auth.uid in chat.data.userIds;
    }
    function isCallParticipant(callId) {
        let call = get(/databases/$(database)/documents/calls/$(callId));
        return isAuthenticated() && (request.auth.uid == call.data.callerId || request.auth.uid == call.data.calleeId);
    }

    // --- Collection Rules ---

    match /users/{userId} {
      // Any authenticated user can read profile data.
      allow read: if isAuthenticated();

      // A user can only create their own document.
      allow create: if isOwner(userId);

      // A user can update their own document completely.
      // Other authenticated users can update specific fields related to interactions.
      allow update: if isOwner(userId) ||
                     (isAuthenticated() &&
                      // WARNING: Allowing 'coins' and 'analytics' updates from any client is a security risk
                      // in a production app without server-side validation. This should ideally be handled
                      // by a Cloud Function. This rule is a functional compromise for a client-heavy app.
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hotnessScore', 'followers', 'coins', 'analytics']));

      // Users cannot be deleted from the client to prevent accidents.
      allow delete: if false;

      // A user has full control over their own notifications sub-collection.
      match /notifications/{notificationId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    match /posts/{postId} {
      // IMPORTANT FIX: Allow authenticated users to list (query) the collection
      // and get (read) individual documents. This is critical for the feed to load.
      allow list, get: if isAuthenticated();

      // A user can only create a post for themselves.
      // On create, `resource` does not exist, so we use `request.resource.data` to validate the incoming document.
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // The post owner can update the caption.
      // Any authenticated user can interact by liking, commenting (updating count), or unlocking.
      allow update: if isAuthenticated() &&
                     ((resource.data.userId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['caption'])) ||
                     (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'commentCount', 'unlockedBy'])));

      // Only the owner of a post can delete it.
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']);
        // The owner of the comment OR the owner of the post can delete a comment.
        allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid ||
                        get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid);
      }
    }

    match /stories/{storyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Any user can update 'viewed' or 'likedBy' arrays.
      allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['viewed', 'likedBy']);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /chats/{chatId} {
      // FIX: Allow 'list' so users can query for their chats on the ChatScreen.
      allow list, read, update: if isChatParticipant(chatId);
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.userIds;

      match /messages/{messageId} {
        allow read, update: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        allow delete: if false; // Use soft deletes via 'deletedFor' field
      }
    }
    
    match /calls/{callId} {
      allow read, update: if isCallParticipant(callId);
      allow create: if isOwner(request.resource.data.callerId);
      allow delete: if isCallParticipant(callId);
    
      match /candidates/{candidateId} {
        // Only call participants can read/write ICE candidates.
        allow read, write: if isCallParticipant(callId);
      }
    }

    match /reports/{reportId} {
      // Any authenticated user can create a report.
      allow create: if isAuthenticated();
      // No one can read/update/delete reports from the client for privacy.
      allow read, update, delete: if false;
    }
  }
}