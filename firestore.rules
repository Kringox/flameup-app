rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isCallParticipant(callId) {
      let call = get(/databases/$(database)/documents/calls/$(callId)).data;
      return isAuthenticated() && (request.auth.uid == call.callerId || request.auth.uid == call.calleeId);
    }
    
    function isChatParticipant(chatId) {
      return isAuthenticated() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.userIds;
    }

    // --- Collections ---
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      // Allow self-updates, and allow others to update specific public fields
      allow update: if isAuthenticated() && (
        isOwner(userId) ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hotnessScore', 'followers']))
      );
      // Prevent accidental deletion
      allow delete: if false;

      match /notifications/{notificationId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.userId);
      // Allow owner to update caption, and anyone to update likes/comments/unlocks
      allow update: if isAuthenticated() && (
        (resource.data.userId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['caption'])) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'commentCount', 'unlockedBy'])
      );
      allow delete: if isOwner(resource.data.userId);

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isOwner(request.resource.data.userId);
        // Allow anyone to update likes on a comment
        allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']);
        // Allow comment owner or post owner to delete
        allow delete: if isAuthenticated() && (
          isOwner(resource.data.userId) || isOwner(get(/databases/$(database)/documents/posts/$(postId)).data.userId)
        );
      }
    }

    match /stories/{storyId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(request.resource.data.userId);
      allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasAny(['viewed', 'likedBy']);
      allow delete: if isOwner(resource.data.userId);
    }
    
    match /chats/{chatId} {
      allow read, update: if isChatParticipant(chatId);
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.userIds;

      match /messages/{messageId} {
        allow read: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        // Allow updates for reactions, recalls, saves, etc.
        allow update: if isChatParticipant(chatId);
        allow delete: if false; // Use soft deletes (deletedFor field)
      }
    }
    
    match /calls/{callId} {
      allow read, update: if isCallParticipant(callId);
      allow create: if isOwner(request.resource.data.callerId);
      // Only caller can delete the document to clean up
      allow delete: if isOwner(resource.data.callerId);

      match /candidates/{candidateId} {
        allow read, write: if isCallParticipant(callId);
      }
    }
    
    match /reports/{reportId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if false; // Handled by backend/admins
    }
  }
}
