
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuthenticated() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    function isChatParticipant(chatId) {
      let chat = get(/databases/$(database)/documents/chats/$(chatId));
      return isAuthenticated() && request.auth.uid in chat.data.userIds;
    }
    function isCallParticipant(callId) {
        // Allow if user is caller or callee
        let call = get(/databases/$(database)/documents/calls/$(callId));
        return isAuthenticated() && (request.auth.uid == call.data.callerId || request.auth.uid == call.data.calleeId);
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) ||
                     (isAuthenticated() &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['hotnessScore', 'followers', 'coins', 'analytics']));
      allow delete: if false;

      match /notifications/{notificationId} {
        allow read, write, delete: if isOwner(userId);
      }
    }

    match /posts/{postId} {
      allow list, get: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() &&
                     ((resource.data.userId == request.auth.uid && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['caption'])) ||
                     (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy', 'commentCount', 'unlockedBy'])));
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
        allow update: if isAuthenticated() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likedBy']);
        allow delete: if isAuthenticated() &&
                       (resource.data.userId == request.auth.uid ||
                        get(/databases/$(database)/documents/posts/$(postId)).data.userId == request.auth.uid);
      }
    }

    match /stories/{storyId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && request.resource.data.diff(resource.data).hasAny(['viewed', 'likedBy']);
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    match /chats/{chatId} {
      allow get, update: if isAuthenticated() && request.auth.uid in resource.data.userIds;
      allow list: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid in request.resource.data.userIds;

      match /messages/{messageId} {
        allow read, update: if isChatParticipant(chatId);
        allow create: if isChatParticipant(chatId) && request.resource.data.senderId == request.auth.uid;
        allow delete: if false; 
      }
    }
    
    match /calls/{callId} {
      // Allow reading/listening to a call if I am involved (via userIds array)
      allow list: if isAuthenticated() && request.auth.uid in resource.data.userIds;
      allow get: if isAuthenticated() && request.auth.uid in resource.data.userIds;
      
      // Creating a call is allowed if I am the caller
      allow create: if isAuthenticated() && request.resource.data.callerId == request.auth.uid;
      
      // Updating/Deleting allowed if participant
      allow update, delete: if isAuthenticated() && request.auth.uid in resource.data.userIds;
    
      match /candidates/{candidateId} {
        allow read, write: if isAuthenticated(); // Simplified for signaling candidates
      }
    }

    match /reports/{reportId} {
      allow create: if isAuthenticated();
      allow read, update, delete: if false;
    }
  }
}
